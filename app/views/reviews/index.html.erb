<h1>Reviews#index</h1>

<h1>Reviews in <%= @recipe.title %></h1>
<table>
    <tr>
        <th>Review details</th>
    </tr>
<% for review in @reviews %>

<tr>
    <td><%= review.details %></td>
    <td><%= link_to 'Show', recipe_review_path(@recipe, review)
%></td>
    <td><%= link_to 'Edit', edit_recipe_review_path(@recipe, review)
%></td>
    <td><%= link_to 'Destroy', recipe_review_path(@recipe, review),
:confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>
<br />

<%= link_to 'New review', new_recipe_review_path(@recipe) %>
<%= link_to 'Back to Recipe', @recipe %>



<p>Find me in app/views/reviews/index.html.erb</p>
