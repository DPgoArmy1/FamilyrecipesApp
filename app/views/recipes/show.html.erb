<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Catagory:</strong>
  <%= @recipe.catagory %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @recipe.rating %>
</p>

<!-- Display the reviews of a recipe -->
<h2>Reviews</h2>
<% @recipe.reviews.each do |review| %>
<p>
<b>Review details:</b>
<%= review.details %>
</p>
<% end %>

<%= link_to 'Edit Recipe', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipe_path %> |
<%= link_to 'Show Reviews', recipe_reviews_path(@recipe) %>


